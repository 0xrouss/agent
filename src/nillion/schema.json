{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Description and Difficulty Collection",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "_id": {
                "type": "string",
                "format": "uuid",
                "coerce": true
            },
            "description": {
                "type": "object",
                "properties": {
                    "$share": {
                        "type": "string"
                    }
                },
                "required": ["$share"]
            },
            "difficulty": {
                "type": "object",
                "properties": {
                    "$share": {
                        "type": "string"
                    }
                },
                "required": ["$share"]
            }
        },
        "required": ["_id", "description", "difficulty"],
        "additionalProperties": false
    }
}
